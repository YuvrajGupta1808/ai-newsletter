# Newsletter App Environment Variables
# Copy this file to .env and fill in your actual values

# Perplexity API Key (get from https://perplexity.ai/)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# News API Key (get from https://newsapi.org/) - for historical news
NEWSAPI_KEY=your_newsapi_key_here

# Gmail credentials for sending emails
GMAIL_USER=your_email@gmail.com
GMAIL_PASS=your_gmail_app_password_here

# Google Sheets ID (from the URL of your sheet)
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Path to Google Service Account JSON file
GOOGLE_SERVICE_JSON_PATH=credentials.json

# Flask secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET_KEY=your_32_character_secret_key_here

# Base URL for the application (used in email links)
BASE_URL=https://ai-newsletter-hsrq.onrender.com
